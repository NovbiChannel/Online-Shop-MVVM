<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_14dp"
            android:background="#00000000"
            android:contentDescription="@string/back" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:layout_height="279dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <LinearLayout
                    android:layout_width="42dp"
                    android:layout_height="95dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_action_widget"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="28dp"
                    android:layout_marginEnd="10dp">
                    
                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_like_17dp"
                        android:background="#00000000"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/like" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dash_12dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/dash" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share_18dp"
                        android:background="#00000000"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/share" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="101dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New balance"
                    android:fontFamily="@font/poppins_600"
                    android:textColor="@color/title"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_22_50"
                    android:fontFamily="@font/poppins_600"
                    android:textColor="@color/title"
                    android:textSize="13sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:text="Features waterproof fire, air resistant shoes, all changed when the country of fire attacked"
                android:textSize="9sp"
                android:fontFamily="@font/poppins_400"
                android:textColor="@color/text_info"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_12dp"
                    android:contentDescription="@string/star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.9"
                    android:textSize="9sp"
                    android:fontFamily="@font/poppins_600"
                    android:layout_marginStart="3dp"
                    android:paddingTop="1dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4000 reviews)"
                    android:textSize="9sp"
                    android:fontFamily="@font/poppins_400"
                    android:textColor="@color/text_info"
                    android:paddingTop="1dp"
                    android:layout_marginStart="2dp"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color"
                    android:fontFamily="@font/poppins_600"
                    android:textSize="10sp"
                    android:textColor="@color/text_title2"
                    android:layout_gravity="center_vertical"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="34dp"
                        android:layout_height="26dp"/>

                    <CheckBox
                        android:layout_width="34dp"
                        android:layout_height="26dp"/>

                    <CheckBox
                        android:layout_width="34dp"
                        android:layout_height="26dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

</ScrollView>